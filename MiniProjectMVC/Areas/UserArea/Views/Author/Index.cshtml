@model IEnumerable<MiniProjectMVC.Models.Author>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/UserArea/Views/Shared/_ProjectLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" border="1">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AuthorName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AuthorName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AuthorId  }, htmlAttributes: new { @class = "btn btn-success" }) |
            @Html.ActionLink("Details", "Details", new { id=item.AuthorId }, htmlAttributes: new { @class = "btn btn-primary" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AuthorId }, htmlAttributes: new { @class = "btn btn-danger" })
        </td>
    </tr>
}

</table>
